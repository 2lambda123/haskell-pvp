executable pvp-site
  main-is:          site.hs
  hs-source-dirs:   src/
  build-depends:    base ^>= 4.9
                  , hakyll ^>= 4.9.2
                  , pandoc ^>= 1.17.2
                  , pandoc-types ^>= 1.16.1
  ghc-options:      -threaded
  default-language: Haskell2010
